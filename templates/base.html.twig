<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>

        {% block stylesheets %}
            <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.2.0/css/all.css">
            <link rel="stylesheet" href="https://bootswatch.com/4/flatly/bootstrap.min.css">
        {% endblock %}
    </head>
    <body>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
            <a class="navbar-brand" href="{{ path('home') }}">Blog symfony</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarColor01">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item active">
                        <a class="nav-link" href="{{ path('blog') }}">Articles <span class="sr-only">(current)</span></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('blog_create') }}">Créer un article</a>
                    </li>

                    {% if not app.user %}
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('security_registration') }}">S'inscrire</a>
                        </li>

                        <li class="nav-item" style="text-align: right; margin-left: 600px;">
                            <a href="{{ path('security_login') }}" class="nav-link"><i class="fas fa-sign-in-alt"></i>

                                Connexion</a>
                        </li>

                    {% else %}
                        <li class="nav-item" style="text-align: right; margin-left: 600px;">
                            <a href="{{ path('security_logout') }}" class="nav-link"><i class="fas fa-sign-out-alt"></i> Déconnexion</a>
                        </li>
                    {% endif %}

                </ul>

            </div>
        </nav>
        <div class="container">
            {% for message in app.flashes('notice') %}
                <div class="alert alert-success alert-dismissible" role="alert">
                    <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                    {{ message  }}
                </div>
            {% endfor %}

        {% block body %}


        {% endblock %}
        </div>
        {% block javascripts %}
            <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
            <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
            <script>
                $(".alert").show("slow").delay(2000).hide("slow");
            </script>

        {% endblock %}
    </body>
</html>
